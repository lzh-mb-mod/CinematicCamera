<Prefab>
  <Window>
    <ButtonWidget Command.Click="CloseMenu" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="RTSCamera.TransparentBrush">
      <Children>            
        <Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" DoNotAcceptEvents="true">
          <Children>
            <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="725" SuggestedHeight="380" Sprite="PhotoMode\photo_mode_options_background" Color="#000000FF" AlphaFactor="0.6" DoNotAcceptEvents="true"/>
            <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MinWidth="500" MinHeight="500" MarginTop="25" MarginLeft="25" StackLayout.LayoutMethod = "VerticalBottomToTop" Color="#000000FF" AlphaFactor="0.8">
              <Children>

                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="42" HorizontalAlignment="Left" PositionXOffset="-18" MarginTop="10">
                  <Children>

                    <!-- PlayerInvulnerable -->
                    <RichTextWidget Text="@PlayerInvulnerableString" WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" SuggestedWidth="200" HorizontalAlignment="Right" VerticalAlignment="Center" PositionXOffset="35" Brush="PhotoMode.Property.Text" />
                    <ButtonWidget IsSelected="@PlayerInvulnerable" ButtonType="Toggle" DoNotPassEventsToChildren="true" ToggleIndicator="ToggleIndicator" HorizontalAlignment="Left" VerticalAlignment="Center" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" MarginLeft="50" SuggestedWidth="40" SuggestedHeight="40" Brush="SPOptions.Checkbox.Empty.Button">
                      <Children>
                        <ImageWidget Id="ToggleIndicator" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="SPOptions.Checkbox.Full.Button" />
                      </Children>
                    </ButtonWidget>

                    <!-- RotateSmoothMode -->
                    <RichTextWidget Text="@RotateSmoothModeString" WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" SuggestedWidth="200" HorizontalAlignment="Right" VerticalAlignment="Center" PositionXOffset="35" Brush="PhotoMode.Property.Text" />
                    <ButtonWidget IsSelected="@RotateSmoothMode" ButtonType="Toggle" DoNotPassEventsToChildren="true" ToggleIndicator="ToggleIndicator" HorizontalAlignment="Left" VerticalAlignment="Center" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" MarginLeft="50" SuggestedWidth="40" SuggestedHeight="40" Brush="SPOptions.Checkbox.Empty.Button">
                      <Children>
                        <ImageWidget Id="ToggleIndicator" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="SPOptions.Checkbox.Full.Button" />
                      </Children>
                    </ButtonWidget>

                  </Children>
                </ListPanel>

                <!-- VerticalFov -->
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod = "HorizontalLeftToRight">
                  <Children>
                    <CinematicCameraValueOption DataSource="{VerticalFov}" MarginRight="10" />
                    <ButtonWidget Command.Click="ResetFov" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" MarginRight="0" SuggestedWidth="35" HeightSizePolicy="Fixed" SuggestedHeight="35" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="RefreshButton.Flat" >
                    </ButtonWidget>
                  </Children>
                </ListPanel>

                <!-- SpeedFactor -->
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod = "HorizontalLeftToRight">
                  <Children>
                    <CinematicCameraValueOption DataSource="{SpeedFactor}" MarginRight="10" />
                    <ButtonWidget Command.Click="ResetSpeedFactor" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" MarginRight="0" SuggestedWidth="35" HeightSizePolicy="Fixed" SuggestedHeight="35" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="RefreshButton.Flat" >
                    </ButtonWidget>
                  </Children>
                </ListPanel>

                <!-- VerticalSpeedFactor -->
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod = "HorizontalLeftToRight">
                  <Children>
                    <CinematicCameraValueOption DataSource="{VerticalSpeedFactor}" MarginRight="10" />
                    <ButtonWidget Command.Click="ResetVerticalSpeedFactor" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" MarginRight="0" SuggestedWidth="35" HeightSizePolicy="Fixed" SuggestedHeight="35" HorizontalAlignment="Center" VerticalAlignment="Center" Brush="RefreshButton.Flat" >
                    </ButtonWidget>
                  </Children>
                </ListPanel>
                    
                <!-- DepthOfFieldDistance -->
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod = "HorizontalLeftToRight">
                  <Children>
                    <CinematicCameraValueOption DataSource="{DepthOfFieldDistance}" MarginRight="20" />
                  </Children>
                </ListPanel>

                <!-- DepthOfFieldStart -->
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod = "HorizontalLeftToRight">
                  <Children>
                    <CinematicCameraValueOption DataSource="{DepthOfFieldStart}" MarginRight="20" />
                  </Children>
                </ListPanel>

                <!-- DepthOfFieldEnd -->
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod = "HorizontalLeftToRight">
                  <Children>
                    <CinematicCameraValueOption DataSource="{DepthOfFieldEnd}" MarginRight="20" />
                  </Children>
                </ListPanel>

              </Children>
            </ListPanel>
          </Children>
        </Widget>
      </Children>
    </ButtonWidget>
  </Window>
</Prefab>